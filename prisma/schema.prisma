generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Experience {
  id      Int    @id @default(autoincrement())
  title   String
  company String
  term    String
}

model Education {
  id      Int    @id @default(autoincrement())
  title   String
  subject String
  term    String
}

model AboutMe {
  id          Int    @id @default(autoincrement())
  name        String
  experience  String
  nationality String
  freelance   String
  phone       String
  telegram    String
  email       String
  languages   String
}
